extends ../../../../templates/guesthome


block content

        <link rel="stylesheet" href="/styles/signup.css">
            <div class="container">
            <div class="jumbotron">
            <form class="form-horizontal" method="post" action= 'editprofile'>
            <fieldset>
                each user in users
                    input(type="hidden" name="guestid" value=`${user.int_guestid}`)
                    <legend><img src="/assets/pics/guesticon.png">EDIT PROFILE </legend>
                    <div class="form-group">
                    <label for="inputName" class="col-lg-2 control-label">Full Name:</label>
                    <div class="col-lg-3">
                        input(type="text" name="userlastname" class="form-control" placeholder="Last Name" value=`${user.varchar_lastname}` minlength="2" maxlength="45" required)
                    </div>
                    <div class="col-lg-3">
                        input(type="text" name="userfirstname" class="form-control" placeholder="First Name" value=`${user.varchar_firstname}` minlength="2" maxlength="45" required)
                    </div>
                    <div class="col-lg-3">
                        input(type="text" name="usermiddlename" class="form-control" placeholder="Middle Name" value=`${user.varchar_middlename}` minlength="2" maxlength="45")
                    </div>
                    </div>
                    <div class="form-group">
                    <label for="select" class="col-lg-2 control-label">Gender:</label>
                    <div class="col-lg-10">
                        <select class="form-control" name="usergender"  value=`${user.char_gender}>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                    </div>
                    <div class="form-group">
                    <label for="inputBirthday" class="col-lg-2 control-label">Birthday:</label>
                    <div class="col-lg-10">
                        input(type="date" name="userbirthday" class="form-control" value=`${user.date_guestbirthday}` required)
                    </div>
                    </div>
                    <div class="form-group">
                    <label for="inputAddress" class="col-lg-2 control-label">Address:</label>
                    <div class="col-lg-10">
                        input(type="string" name="useraddress" class="form-control" value=`${user.varchar_guestaddress}` minlength="2" maxlength="70" required)
                    </div>
                    </div> 
                    <div class="form-group">
                    <label for="inputContact" class="col-lg-2 control-label">Contact No:</label>
                    <div class="col-lg-10">
                        input(type="string" name="usercontactnumber" class="form-control" value=`${user.varchar_guestcontactnumber}` required)
                    </div>
                    </div>
                
                    <div class="form-group">
                    <label for="inputE-mail" class="col-lg-2 control-label">E-mail Address:</label>
                    <div class="col-lg-10">
                        input(type="string" name="useremail" class="form-control" value=`${user.varchar_guestemail}` required)
                    </div>
                    </div>
                    <div class="form-group">
                    <label for="inputName" class="col-lg-2 control-label">Username:</label>
                    <div class="col-lg-10">
                        input(type="string" name="username" class="form-control" value=`${user.varchar_username}` minlength="2" maxlength="20" required)
                    </div>
                    </div>
                    <div class="form-group">
                    <label for="inputPassword" class="col-lg-2 control-label">Password:</label>
                    <div class="col-lg-10">
                        <input type="string" name="password" class="form-control" placeholder="Enter your new password" minlength="2" maxlength="20" required>
                    </div>
                    </div>          
                        <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="reset" class="btn btn-default">Clear</button>
                        <button type="submit" class="btn btn-primary" >Submit</button>
                    </div>
                    </div>
            </fieldset>
            </form>
            </div>
            </div>
    
           
            </div>